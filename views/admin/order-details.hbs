<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5"
                        style="display: flex;flex-direction:row;justify-content:space-between">
                        <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">{{order.user.Name}}</span>!
                        </h5>
                        <div>
                            <select class="form-control" id="order-status">
                                <option disabled selected>---Select---</option>
                                <option value="Confirmed" {{#eq order.status 'Confirmed' }} selected {{/eq}}>Confirmed</option>
                                <option value="Shipped" {{#eq order.status 'Shipped' }} selected {{/eq}}>Shipped</option>
                                <option value="Out for delivery" {{#eq order.status 'Out for delivery' }} selected {{/eq}}>Out
                                    for delivery</option>
                                <option value="Delivered" {{#eq order.status 'Delivered' }} selected {{/eq}}>Delivered</option>
                            </select>
                        </div>
                    </div>
                    <input id="orderId" type="hidden" value="{{orderId}}">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
                            <p class="small text-muted mb-0">Order Number : #{{order.orderNumber}}</p>
                        </div>

                        {{#each items}}
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="/product-images/{{this.products._id}}.jpg" class="img-fluid"
                                            alt="Phone">
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">{{ this.products.Name }}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Qty: {{ this.quantity }}</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">₹ {{ this.products.Price }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}


                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Delivery Details</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> ₹ {{order.totalAmount}}</p>
                        </div>

                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">Address : {{order.deliveryDetails.address}}</p>
                            {{!-- <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $19.00</p> --}}
                        </div>

                        <div class="d-flex justify-content-between">
                            <p class="text-muted mb-0">Mobile : {{order.deliveryDetails.mobile}}</p>
                            {{!-- <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p> --}}
                        </div>

                        <div class="d-flex justify-content-between mb-5">
                            <p class="text-muted mb-0">Pincode : {{order.deliveryDetails.pincode}}</p>
                            {{!-- <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p> --}}
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                            paid: <span class="h2 mb-0 ms-2">₹ {{order.totalAmount}}</span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





